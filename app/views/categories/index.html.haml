.categories.index-page
  .card
    .card-body
      %h1 Listing categories
      %table
        %thead
          %tr
            %th Name
            %th Description
            %th
            %th
            %th

        %tbody
          - @categories.each do |category|
            %tr
              %td= category.name
              %td= category.description
              %td= link_to t('common.Show'), category
              %td= link_to t('common.Edit'),  edit_category_path(category)
              %td= link_to t('common.Destroy'),  category, :method => :delete, :data => { :confirm => 'Are you sure?' }

      %br

      = link_to 'New Category', new_category_path
